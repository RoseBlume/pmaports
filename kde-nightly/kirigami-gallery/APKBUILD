# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kirigami-gallery
pkgver=9999_git20240409
pkgrel=0
_commit="d4fb016cd515a7de988c8f63beb15d1dff4e122a"
# armhf blocked by kirigami -> qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/applications/development/org.kde.kirigami2.gallery"
pkgdesc="Gallery application built using Kirigami"
license="LGPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	kirigami-dev
	kitemmodels-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/kirigami-gallery.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-09/kirigami-gallery-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/kirigami-gallery-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
380399bcf109123ce0383e28144f05cecd1bde26c377c8138845a38067c8f6401c34a52fa101c7123d90e14398fcdb75fb88ad8f9052ed1b5651f00edd181d84  kirigami-gallery-d4fb016cd515a7de988c8f63beb15d1dff4e122a.tar.xz
"
