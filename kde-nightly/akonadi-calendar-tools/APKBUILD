# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=akonadi-calendar-tools
pkgver=9999_git20240512
pkgrel=0
_commit="00e619128033990f46f278143e9c5bc837db93cd"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by akonadi-calendar -> kmailtransport -> libkgapi -> qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
pkgdesc="CLI tools to manage akonadi calendars"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	akonadi-calendar-dev
	akonadi-dev
	calendarsupport-dev
	extra-cmake-modules
	kcalendarcore-dev
	kcalutils-dev
	kdoctools-dev
	libkdepim-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-calendar-tools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-14/akonadi-calendar-tools-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests available

options="!check"
builddir="$srcdir/akonadi-calendar-tools-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
451c9fac841c207c7e2a9aa9520d9893695471329d588e622632a21f90f9bb18816ffd99aae37fd6961fe4116e16e7ba1892f30ea3d5eca999c185ef8b739e59  akonadi-calendar-tools-00e619128033990f46f278143e9c5bc837db93cd.tar.xz
"
