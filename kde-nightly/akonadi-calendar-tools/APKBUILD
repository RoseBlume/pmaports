# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=akonadi-calendar-tools
pkgver=9999_git20240901
pkgrel=0
_commit="0e3e2abae217d590068c53d9225406b8059bc1a8"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by akonadi-calendar -> kmailtransport -> libkgapi -> qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
pkgdesc="CLI tools to manage akonadi calendars"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	akonadi-calendar-dev
	akonadi-dev
	calendarsupport-dev
	extra-cmake-modules
	kcalendarcore-dev
	kcalutils-dev
	kdoctools-dev
	libkdepim-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-calendar-tools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-03/akonadi-calendar-tools-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests available

options="!check"
builddir="$srcdir/akonadi-calendar-tools-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
bf463de4e4a8f0744f151e8ec06ac04254fce09369bcf338d26fdabf38970db148e06445d0c3943dc80aaae8eb96f01523babf6a212c55a4576fcfa6f7acff7e  akonadi-calendar-tools-0e3e2abae217d590068c53d9225406b8059bc1a8.tar.xz
"
