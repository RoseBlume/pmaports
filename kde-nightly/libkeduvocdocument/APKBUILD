# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkeduvocdocument
pkgver=9999_git20240318
pkgrel=0
_commit="f12d5ac728399005cc48544947ee611aed041f4b"
arch="all !armhf"
url="https://edu.kde.org"
pkgdesc="Library to parse, convert, and manipulate KVTML files"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/libkeduvocdocument.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-20/libkeduvocdocument-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/libkeduvocdocument-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
09246e8be7439c4cae3df8b4a7a8e08c31ba40bacd984dac53658bb94d227d6f82d310fb98692918b3a884c45fd44c415d6a9eeeaa18eec0ebc5d963bb5fbec7  libkeduvocdocument-f12d5ac728399005cc48544947ee611aed041f4b.tar.xz
"
