# Maintainer: team/kde <bribbers@disroot.org>
# Contributor: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kactivities-stats
pkgver=9999_git20240123
pkgrel=0
_commit="7e2fa623f294302141042375aa2a8e804d40f79e"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kactivities-dev
	kconfig-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kactivities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-01/kactivities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kactivities-stats-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
317ba5ecf6aa58f5f17a5be2f693a86eda5785eb0aac288ded7bb69edff867258b562488e55d6c1dbd466efe192766afd06b63c205dc2f83e274469830c3f723  kactivities-stats-7e2fa623f294302141042375aa2a8e804d40f79e.tar.xz
"
