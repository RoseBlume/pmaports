# Maintainer: team/kde <bribbers@disroot.org>
# Contributor: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kactivities-stats
pkgver=9999_git20240214
pkgrel=0
_commit="7990b5b92f456431e9c4ccc8e4dac65e56420220"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kactivities-dev
	kconfig-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kactivities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-18/kactivities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kactivities-stats-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
de4fcce3ef0ff311ffa58139257d0fb0da486a64bf399ced086d7498a71c22833189ca257971388d8bab498b0d5e8adcafa59fd798e048048b2e66f3b34d305d  kactivities-stats-7990b5b92f456431e9c4ccc8e4dac65e56420220.tar.xz
"
