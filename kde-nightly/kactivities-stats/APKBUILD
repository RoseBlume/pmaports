# Maintainer: team/kde <bribbers@disroot.org>
# Contributor: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kactivities-stats
pkgver=9999_git20240205
pkgrel=0
_commit="5f7ec2dc8fe5a85ace0901111b4759553bc467cb"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
pkgdesc="A library for accessing the usage data collected by the activities system"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	boost-dev
	graphviz-dev
	kactivities-dev
	kconfig-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kactivities-stats.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-12/kactivities-stats-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kactivities-stats-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c24e987162f3c843cc6754f3b2a19ff2c2fe55d7997e283eaa8848a7e2263134fbdf09f6ffc24ce7ece31b66d590d72f8badf002cae82e61c8d0be0009822f97  kactivities-stats-5f7ec2dc8fe5a85ace0901111b4759553bc467cb.tar.xz
"
