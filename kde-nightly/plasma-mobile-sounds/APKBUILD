# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-mobile-sounds
pkgver=9999_git20240427
pkgrel=0
_commit="3038b8c9924a36c919f0bdb8ce97407c9d102bfa"
pkgdesc="Sounds for Plasma Mobile devices"
url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
license="CC-BY-4.0 AND CC-BY-SA-4.0 AND CC0-1.0"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-30/plasma-mobile-sounds-$_commit.tar.xz"
options="!check" # No code to test

options="!check"
builddir="$srcdir/plasma-mobile-sounds-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cd98e8f355307dced4ab434cd9765257a67605bd80e36f3f4dfe4005daf2ce81b36aa1d0608f1202631cc407a99ecf12c75b18f4a2b0ca0bd57a266ea6c8555a  plasma-mobile-sounds-3038b8c9924a36c919f0bdb8ce97407c9d102bfa.tar.xz
"
