# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kpat
pkgver=9999_git20240820
pkgrel=0
_commit="bfb4a42afb71a6cca4de71bbf1ab21c1aa1f53a3"
pkgdesc="KPatience offers a selection of solitaire card games"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games/kpat/"
license="GPL-2.0-or-later AND GFDL-1.2-only"
depends="carddecks"
makedepends="
	black-hole-solver-dev
	extra-cmake-modules
	freecell-solver-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	libkdegames-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/games/kpat.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-22/kpat-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
# Broken tests
options="!check"

options="!check"
builddir="$srcdir/kpat-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7216afc15784b134073e76a93500425f9a013f74220064e3d7e39cd36932a03225171b95b2ecd40e468bc142de4e9d4d87cc5db4f3a6af7a1e7861b7fc853441  kpat-bfb4a42afb71a6cca4de71bbf1ab21c1aa1f53a3.tar.xz
"
