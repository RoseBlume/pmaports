# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kitemviews
pkgver=9999_git20240207
pkgrel=0
_commit="071c4c69dbd7c653eede98b44c2975194a1d3bda"
pkgdesc="Widget addons for Qt Model/View"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="GPL-2.0-only AND LGPL-2.1-only"
depends_dev="qt6-qtbase-dev"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kitemviews.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-11/kitemviews-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kitemviews-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
85f88b243511d5638dac07deff0671649c890a1841f5614901c76b1b28e6db7b5c5c483d485b6feed57f07191d18a9c7ce1d80c72ee4b092b45a89d1046ba318  kitemviews-071c4c69dbd7c653eede98b44c2975194a1d3bda.tar.xz
"
