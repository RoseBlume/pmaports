# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kconfigwidgets
pkgver=9999_git20240216
pkgrel=0
_commit="805baee2231e8e5742f5ee1343bba74caab1796e"
pkgdesc="Widgets for KConfig"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
depends_dev="
	kauth-dev
	kcodecs-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	kguiaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kdoctools-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kconfigwidgets.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-18/kconfigwidgets-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kconfigwidgets-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure -E "kstandardactiontest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f7179f656f72f39c49eafe5ab38dc39cfef0466c450ebeec931babf3fc4c173d22401ee8ac2585f8faeff347f56daa6c3494cd6a7b8bbf7eba937516834c00eb  kconfigwidgets-805baee2231e8e5742f5ee1343bba74caab1796e.tar.xz
"
