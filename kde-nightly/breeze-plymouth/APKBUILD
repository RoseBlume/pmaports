# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=breeze-plymouth
pkgver=9999_git20240524
pkgrel=0
_commit="ce52709aa3a3f46fefb63d0a1fdbf3b0b0dfa334"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://kde.org/"
pkgdesc="Breeze theme for Plymouth"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	plymouth-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/breeze-plymouth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-17/breeze-plymouth-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/breeze-plymouth-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DDISTRO_NAME="$(grep PRETTY_NAME /etc/os-release | awk -F  = '{ print $2 }')" \
		-DDISTRO_VERSION="$(grep VERSION_ID /etc/os-release | awk -F  = '{ print $2 }')"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8b8518a27a1fa7ae2c0d3654e1f842a4922b867705af2699d7b78567543e5f9fd384a4ae35abb3fbd8cb152bcd39e5e65b3d89b1f8ab16ab948237bc3960f9dc  breeze-plymouth-ce52709aa3a3f46fefb63d0a1fdbf3b0b0dfa334.tar.xz
"
