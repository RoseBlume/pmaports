# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=breeze-plymouth
pkgver=9999_git20240110
pkgrel=0
_commit="5538e57e2d94e4a68375d47c8b23a2bec298fd4c"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://kde.org/"
pkgdesc="Breeze theme for Plymouth"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	plymouth-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/breeze-plymouth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-27/breeze-plymouth-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/breeze-plymouth-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DDISTRO_NAME="$(grep PRETTY_NAME /etc/os-release | awk -F  = '{ print $2 }')" \
		-DDISTRO_VERSION="$(grep VERSION_ID /etc/os-release | awk -F  = '{ print $2 }')"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8a100ef0687c13d548db7544cffbc24f9fa68c2a0c7e416ab8196827da6940b5bf64e513325e52069a6ca461943dd0d3786737230fb1e234565e1d2a0a39fd21  breeze-plymouth-5538e57e2d94e4a68375d47c8b23a2bec298fd4c.tar.xz
"
