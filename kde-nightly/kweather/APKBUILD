# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kweather
pkgver=9999_git20240831
pkgrel=0
_commit="be9587804208dc6f514fb8f7537c901aaa0e65cf"
pkgdesc="Weather application for Plasma Mobile"
url="https://invent.kde.org/plasma-mobile/kweather"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-or-later AND CC-BY-4.0"
depends="
	kirigami-addons
	kirigami
	kquickcharts
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	knotifications-dev
	kquickcharts-dev
	kweathercore-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtcharts-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/kweather.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-03/kweather-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/kweather-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

