# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=networkmanager-qt
pkgver=9999_git20240318
pkgrel=0
_commit="43edbfd3d975e6998f5e849378f3d493a9c043b5"
pkgdesc="Qt wrapper for NetworkManager API"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="networkmanager"
depends_dev="networkmanager-dev"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/networkmanager-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-30/networkmanager-qt-$_commit.tar.xz"

options="!check"
builddir="$srcdir/networkmanager-qt-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# The excluded tests currently fail
	ctest --test-dir build --output-on-failure -E '(manager|settings|activeconnection)test'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
de02cc84e0cacda7a2bbf78867d9ff4d92ea09eabf7f88948faa1736795302e10243a7fa5fd2377c7f231853ca27d2f7b5620098a35bd9c13fa2cc40c550e254  networkmanager-qt-43edbfd3d975e6998f5e849378f3d493a9c043b5.tar.xz
"
