# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kbookmarks
pkgver=9999_git20240310
pkgrel=0
_commit="892d9f2c7b47e6d5812bed66fc5b89719b567c0c"
pkgdesc="Support for bookmarks and the XBEL format"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcodecs-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kbookmarks.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-14/kbookmarks-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kbookmarks-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cd982105aed815bd763b497f1bbeb5fd3bade97653a2efa378ba9bc88283010203a95783fe14f0cc35bf1f06efcd11b8edc98e1ce336b87df7ad5e5f5c32c10a  kbookmarks-892d9f2c7b47e6d5812bed66fc5b89719b567c0c.tar.xz
"
