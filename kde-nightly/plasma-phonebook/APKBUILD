# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=plasma-phonebook
pkgver=9999_git20240424
pkgrel=0
_commit="bb8ecd9820a1dbad67a349f5bcbed2022d021327"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	kpeoplevcard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-02/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f780ffb50242ec4ef3a6af004a5368fdc47c40e6267386d6338512b8dee904366c2fce060bc7206d36aad42f715049a2a991ed0fefec0c5c0457c947c8cfd6e4  plasma-phonebook-bb8ecd9820a1dbad67a349f5bcbed2022d021327.tar.xz
"
