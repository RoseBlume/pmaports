# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=plasma-phonebook
pkgver=9999_git20240903
pkgrel=0
_commit="30a6602fbbc657782dd0df806760e41ae1c6c1ec"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	kpeoplevcard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-05/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
94f086561948c40f0a20c42f5403a118fe019416817407404b675f1c798fae2678ab582b1ddfec121dc6ccd24862fbeee0f377c188cfcc52eb84becddf26d6cc  plasma-phonebook-30a6602fbbc657782dd0df806760e41ae1c6c1ec.tar.xz
"
