# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=plasma-phonebook
pkgver=9999_git20231221
pkgrel=0
_commit="c276e8f954e4ec6b4e66368b558ab11de1566acd"
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami-addons
	kirigami
	kpeoplevcard
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami-addons-dev
	kirigami-dev
	kpeople-dev
	kpeoplevcard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-phonebook.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2023-12-26/plasma-phonebook-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

builddir="$srcdir/plasma-phonebook-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
601cb479cc607cdba6a011e2288476570eec58c57b6d816178ff40bbefe226c3fad2f097e89375ae6f50a3d7bc19f63025a78427b6a2b2021affbf7c2a5628f7  plasma-phonebook-c276e8f954e4ec6b4e66368b558ab11de1566acd.tar.xz
"
