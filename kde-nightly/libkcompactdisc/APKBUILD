# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkcompactdisc
pkgver=9999_git20240301
pkgrel=0
_commit="020bc008898b8ab18e7e8abbdce6355ac813a1aa"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="Library for interfacing with CDs"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
_repo_url="https://invent.kde.org/multimedia/libkcompactdisc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-03/libkcompactdisc-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/libkcompactdisc-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2ae2086eb8c449cb97db87f3d5933e6e9c102da7971f6574c5d52b6b8d307ac4dd224a95920300f6efcf004d974b139d4d65b4ee4118d4ee11687d490a1d6af6  libkcompactdisc-020bc008898b8ab18e7e8abbdce6355ac813a1aa.tar.xz
"
