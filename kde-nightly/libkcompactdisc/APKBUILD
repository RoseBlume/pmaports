# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkcompactdisc
pkgver=9999_git20240310
pkgrel=0
_commit="6def6182a443e8033a9c5208179505bfa60a8c92"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="Library for interfacing with CDs"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
_repo_url="https://invent.kde.org/multimedia/libkcompactdisc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-14/libkcompactdisc-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/libkcompactdisc-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
70db6c7f985f5952df04f45fc10332bc8c66381419839b8589d0dae51574d7f2f9c0ebdb67c1c98723e73c76006c4c89c6b36e101892f86b0d4050a59969d012  libkcompactdisc-6def6182a443e8033a9c5208179505bfa60a8c92.tar.xz
"
