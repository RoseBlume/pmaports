# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkcompactdisc
pkgver=9999_git20240317
pkgrel=0
_commit="36f76f266a61a0f7dc542c06c3bb929ba06b5ad5"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="Library for interfacing with CDs"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
_repo_url="https://invent.kde.org/multimedia/libkcompactdisc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-18/libkcompactdisc-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/libkcompactdisc-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3aa6770c87458d621c90204801c4b487e2f77293830498629b172a486ec42cdccde5ae19dcc7a5ec1d813794d58f4e3682f8c3ecaa7993f1e486a86eeb6b4dec  libkcompactdisc-36f76f266a61a0f7dc542c06c3bb929ba06b5ad5.tar.xz
"
