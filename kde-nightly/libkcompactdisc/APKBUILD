# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkcompactdisc
pkgver=9999_git20240314
pkgrel=0
_commit="6ca4fdcd1788d96e78f0d5686c75e5f39e15d333"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="Library for interfacing with CDs"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	ki18n-dev
	phonon-dev
	qt6-qtbase-dev
	samurai
	solid-dev
	"
_repo_url="https://invent.kde.org/multimedia/libkcompactdisc.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-16/libkcompactdisc-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/libkcompactdisc-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3f074e226214668710cb41c31da9619467099d2cd314f997b20f1f29ec8c7b00bce7fd6655aab3d6fbe19fac36fa3565ae7ac173bbfb297134a68a34cc16a585  libkcompactdisc-6ca4fdcd1788d96e78f0d5686c75e5f39e15d333.tar.xz
"
