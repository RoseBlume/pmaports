# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kio-zeroconf
pkgver=9999_git20240405
pkgrel=0
_commit="7aa20db91754f5c83145800e7a1c2f9188310668"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdnssd-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kio-zeroconf.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-09/kio-zeroconf-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kio-zeroconf-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
496e545ce1ac4272e6f5feecd81c523a24c53a5a7881de0c3632c3ad8215e552724b3db51fc2273708cbebb281884a99f3456a19b52632ae3f60f2269e017508  kio-zeroconf-7aa20db91754f5c83145800e7a1c2f9188310668.tar.xz
"
