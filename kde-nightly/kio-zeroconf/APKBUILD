# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kio-zeroconf
pkgver=9999_git20240417
pkgrel=0
_commit="69d57feb25b96542c7618307ddfb959ea4ceded3"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdnssd-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kio-zeroconf.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-24/kio-zeroconf-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kio-zeroconf-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1659130f3d2f73eb1171b18e6afe886b9dd6413c0f53ac918a68336095acfd42a141d48ce2c01b9a2eb6f3988e0bfb5570dc22a9539104fb4361a97d50b36826  kio-zeroconf-69d57feb25b96542c7618307ddfb959ea4ceded3.tar.xz
"
