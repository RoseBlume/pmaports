# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kio-zeroconf
pkgver=9999_git20240210
pkgrel=0
_commit="c4b4404c6b2bd7773132fcea5bbdde5c58e1dd2b"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	kdnssd-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/network/kio-zeroconf.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-12/kio-zeroconf-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kio-zeroconf-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
56b43f8a29f697bd945e7886d7632e0f274fbbc8c2c2e3070f70696fd61f65f73ccdf3e5b283e2d82d096857a0e16c78abe6d53f3792362db6dc9adc51e8dace  kio-zeroconf-c4b4404c6b2bd7773132fcea5bbdde5c58e1dd2b.tar.xz
"
