# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=breeze-grub
pkgver=9999_git20210607
pkgrel=0
_commit="63136a9d4efe3e0fb5638338bfc8660157d80c08"
pkgdesc="Breeze theme for GRUB"
arch="noarch !s390x !armhf" # armhf blocked by extra-cmake-modules
url="https://kde.org/plasma-desktop/"
license="GPL-3.0-or-later"
depends="grub"
makedepends="
	extra-cmake-modules
	font-unifont
	grub-mkfont
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/breeze-grub.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-03/breeze-grub-$_commit.tar.xz"
options="!check" # No test suite available

options="!check"
builddir="$srcdir/breeze-grub-$_commit"

build() {
	./mkfont.sh
}

package() {
	install -d "$pkgdir"/usr/share/grub/themes
	cp -r breeze "$pkgdir"/usr/share/grub/themes
}
sha512sums="
