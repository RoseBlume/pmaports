# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=kgamma5
pkgver=9999_git20240424
pkgrel=0
_commit="7aa3ca07ab06efeefbabb18aae9c41f35a96c4fe"
pkgdesc="Adjust your monitor's gamma settings"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kdoctools-dev
	ki18n-dev
	qt6-qtbase-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/kgamma5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-02/kgamma5-$_commit.tar.xz"
subpackages="$pkgname-doc"

options="!check"
builddir="$srcdir/kgamma5-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
81864c0ee32cdcfab59dfa0cfb4cf51886afcef691f6443d231e5b907b69d89526d677b2844da4382eda4b0d069e017ba448966b5c42479fcf6bfd6af4fb2bf5  kgamma5-7aa3ca07ab06efeefbabb18aae9c41f35a96c4fe.tar.xz
"
