# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=angelfish
pkgver=9999_git20240517
pkgrel=0
_commit="a6f3d30dc365813986d06a2d75e0c74de6bd13a5"
pkgdesc="Small Webbrowser for Plasma Mobile"
# armhf blocked by extra-cmake-modules
# ppc64le and s390x blocked by qt6-qtwebengine
# riscv64 disabled due to missing rust in recursive dependency
arch="all !ppc64le !s390x !armhf !riscv64"
url="https://phabricator.kde.org/source/plasma-angelfish/"
license="GPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	libplasma
	purpose
	qt6-qtbase-sqlite
	"
makedepends="
	cargo
	corrosion
	extra-cmake-modules
	futuresql-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	libplasma
	purpose-dev
	qqc2-desktop-style-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/angelfish.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-20/angelfish-$_commit.tar.xz"
options="net" # net required to download Rust dependencies

provides="plasma-angelfish=$pkgver-r$pkgrel" # Backwards compatibility
replaces="plasma-angelfish" # Backwards compatibility

options="!check"
builddir="$srcdir/angelfish-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9de324330ab6af13037c024003f1199bea9a4ef5edaf15b109b6b900c0754b7cf534e566c9756e6d082261589bf659701d076dc4bebd669e4d3aa4dbbcf87557  angelfish-a6f3d30dc365813986d06a2d75e0c74de6bd13a5.tar.xz
"
