# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=angelfish
pkgver=9999_git20240208
pkgrel=0
_commit="3cb22eab644fdbc73f410106ec863a2f78f6996e"
pkgdesc="Small Webbrowser for Plasma Mobile"
# armhf blocked by extra-cmake-modules
# ppc64le and s390x blocked by qt6-qtwebengine
# riscv64 disabled due to missing rust in recursive dependency
arch="all !ppc64le !s390x !armhf !riscv64"
url="https://phabricator.kde.org/source/plasma-angelfish/"
license="GPL-3.0-or-later"
depends="
	kirigami
	kirigami-addons
	libplasma
	purpose
	qt6-qtbase-sqlite
	"
makedepends="
	cargo
	corrosion
	extra-cmake-modules
	futuresql-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	libplasma
	purpose-dev
	qqc2-desktop-style-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/angelfish.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-11/angelfish-$_commit.tar.xz"
options="net" # net required to download Rust dependencies

provides="plasma-angelfish=$pkgver-r$pkgrel" # Backwards compatibility
replaces="plasma-angelfish" # Backwards compatibility

options="!check"
builddir="$srcdir/angelfish-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
26f7a1916da5b9244477c3dd690d81f2ffe743ca416d8fe73160f737696dbd357e98fc9abd688b145ab904e53ef658c51ddcfb7fa1ae291da703cade4c68782c  angelfish-3cb22eab644fdbc73f410106ec863a2f78f6996e.tar.xz
"
