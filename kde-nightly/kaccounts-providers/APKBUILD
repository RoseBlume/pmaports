# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaccounts-providers
pkgver=9999_git20240802
pkgrel=0
_commit="f3c598f337a5c1e5474341aac70dc2ed5a15de1b"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later"
depends="signon-plugin-oauth2"
makedepends="
	extra-cmake-modules
	kaccounts-integration-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kpackage-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-providers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-02/kaccounts-providers-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/kaccounts-providers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c91a7cbb582911aad6aa243c87dbfc97e46979ed69eab07bab2b84527d2754ccbb3e5bf2d0bfe906f590bc3e310f433fb6f3a504cfc914d30a07782d2d0cd520  kaccounts-providers-f3c598f337a5c1e5474341aac70dc2ed5a15de1b.tar.xz
"
