# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kaccounts-providers
pkgver=9999_git20240803
pkgrel=0
_commit="2140968f96f167769d7dec4224586c0444d2e768"
# armhf blocked by extra-cmake-modules
# s390x, ppc64le and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kde.org/applications/internet/"
pkgdesc="Small system to administer web accounts for the sites and services across the KDE desktop"
license="GPL-2.0-or-later"
depends="signon-plugin-oauth2"
makedepends="
	extra-cmake-modules
	kaccounts-integration-dev
	kdeclarative-dev
	ki18n-dev
	kio-dev
	kpackage-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwebengine-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/kaccounts-providers.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-03/kaccounts-providers-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/kaccounts-providers-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fd234bea16debf0a1e5ce45db426c728014004b277f9ba5269a6414b171d0eb63501d11506acce61bf445b0c85f78af2b1bed018a1e3b4736e4ab3567761ed41  kaccounts-providers-2140968f96f167769d7dec4224586c0444d2e768.tar.xz
"
