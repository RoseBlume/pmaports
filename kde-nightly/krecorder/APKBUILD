# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=krecorder
pkgver=9999_git20240122
pkgrel=0
_commit="84709a56df17f84558c9b4fd2bfe3666d51a5558"
pkgdesc="Audio recorder for Plasma Mobile (and other platforms)"
url="https://invent.kde.org/plasma-mobile/krecorder"
arch="all !armhf" # armhf blocked by extra-cmake-modules
license="GPL-3.0-or-later"
depends="
	kirigami-addons
	kirigami2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/krecorder.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-24/krecorder-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e936eb832c4cfd634652cef8aff9e6fa6f44b670153431aa0132cf8f3524e22c5f3132bc8cbf1bd3e5e69f6596f4c92d0715aa502adf3bb8a7ea1ccc87e4d959  krecorder-84709a56df17f84558c9b4fd2bfe3666d51a5558.tar.xz
"
