# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=krecorder
pkgver=9999_git20240728
pkgrel=0
_commit="975534ce0ce51df4ae3188eb07992c850f796a4a"
pkgdesc="Audio recorder for Plasma Mobile (and other platforms)"
url="https://invent.kde.org/plasma-mobile/krecorder"
arch="all !armhf" # armhf blocked by extra-cmake-modules
license="GPL-3.0-or-later"
depends="
	kirigami-addons
	kirigami2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/krecorder.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-07-31/krecorder-$_commit.tar.xz"
options="!check" # No tests

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
da10d3c3dc97d4c322c56a2dde7d4121317c7016d4af3b2e35bcae928939772aa51b8030d1c1facf2a5c9af01c6c30e08a74b579daa32d004bfd87dfbd1d3975  krecorder-975534ce0ce51df4ae3188eb07992c850f796a4a.tar.xz
"
