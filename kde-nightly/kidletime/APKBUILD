# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kidletime
pkgver=9999_git20240126
pkgrel=0
_commit="b78b894d98540c6679d0dff766930aa6258ac113"
pkgdesc="Monitoring user activity"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	samurai
	wayland-dev
	wayland-protocols
	"
_repo_url="https://invent.kde.org/frameworks/kidletime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-01/kidletime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kidletime-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# solidmttest is broken
	ctest --test-dir build --output-on-failure -E "solidmttest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5b9850e846dbd3fc135c16806dda306cd995127f4bde1e13f8941cc51afde5be5ad3674c7992760281745246ebdc5b360b9fcda00b527e05934481d2cbbea5c2  kidletime-b78b894d98540c6679d0dff766930aa6258ac113.tar.xz
"
