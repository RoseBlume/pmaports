# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kidletime
pkgver=9999_git20240712
pkgrel=0
_commit="7f1bff7296d8af7e33c88cf3b5d1825ca97791a9"
pkgdesc="Monitoring user activity"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
makedepends="
	doxygen
	extra-cmake-modules
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	samurai
	wayland-dev
	wayland-protocols
	"
_repo_url="https://invent.kde.org/frameworks/kidletime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-07-20/kidletime-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

options="!check"
builddir="$srcdir/kidletime-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# solidmttest is broken
	ctest --test-dir build --output-on-failure -E "solidmttest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6f82267a1b15905fd968b07f0345fd2c2830c850ea442a637981f1f5cb217f24fa7d948238a09df28de1d8d1513ff654aadf61fa51a1969c16c1d57d671fc393  kidletime-7f1bff7296d8af7e33c88cf3b5d1825ca97791a9.tar.xz
"
