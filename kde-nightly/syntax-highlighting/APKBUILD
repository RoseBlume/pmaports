# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=syntax-highlighting
pkgver=9999_git20240301
pkgrel=0
_commit="db7282d90beebbab7c8112776e4b62db9d1f1eca"
pkgdesc="Syntax highlighting engine for structured text and code"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="MIT"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	xerces-c-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	perl
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syntax-highlighting.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-03/syntax-highlighting-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/syntax-highlighting-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0b8cc99c8ada3ddcb89c0b5310b3c575b92ed690901ce52e369a35d8b293281a0fb9626bae81d0a03ee8bf149aaab56dec31eb24871a360829101c0e06d36554  syntax-highlighting-db7282d90beebbab7c8112776e4b62db9d1f1eca.tar.xz
"
