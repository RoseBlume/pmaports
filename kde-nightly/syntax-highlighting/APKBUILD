# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=syntax-highlighting
pkgver=9999_git20240126
pkgrel=0
_commit="6482e48b558b1fea9c4291fd247b8f82a4bf73af"
pkgdesc="Syntax highlighting engine for structured text and code"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="MIT"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	xerces-c-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	perl
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/syntax-highlighting.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-29/syntax-highlighting-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/syntax-highlighting-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3bc5573fd2172a9d29796256d98cb3c1a6a26b2d3cfc9f896052d8de611a2234a3dcf9b6fa292744e2008c22acc36944af39df0cc52cc41923810d3bf9d89a6b  syntax-highlighting-6482e48b558b1fea9c4291fd247b8f82a4bf73af.tar.xz
"
