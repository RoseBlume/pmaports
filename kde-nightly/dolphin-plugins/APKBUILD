# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=dolphin-plugins
pkgver=9999_git20240508
pkgrel=0
_commit="e795b0751cb4d723e7894f8f78753f9f326e0c58"
pkgdesc="Extra Dolphin plugins"
url="https://www.kde.org/applications/system/dolphin/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	dolphin-dev
	extra-cmake-modules
	ki18n-dev
	kio-dev
	ktexteditor-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/dolphin-plugins.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-09/dolphin-plugins-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/dolphin-plugins-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_svn=OFF # Broken "error: expected unqualified-id before '(' token"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7f12100b4c17468550e42391dcb515e5db87e9cc8f688fdc9974234090b91a5ec559d6e1c64981ff87e6dc1119e2ba326a5a835288601dff02cbc209cea46f8b  dolphin-plugins-e795b0751cb4d723e7894f8f78753f9f326e0c58.tar.xz
"
