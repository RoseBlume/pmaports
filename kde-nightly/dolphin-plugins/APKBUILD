# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=dolphin-plugins
pkgver=9999_git20240406
pkgrel=0
_commit="f7a7bd7cfbdc834e72c9831595f699e8de01821d"
pkgdesc="Extra Dolphin plugins"
url="https://www.kde.org/applications/system/dolphin/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	dolphin-dev
	extra-cmake-modules
	ki18n-dev
	kio-dev
	ktexteditor-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/dolphin-plugins.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-09/dolphin-plugins-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/dolphin-plugins-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_svn=OFF # Broken "error: expected unqualified-id before '(' token"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7da53304bc3c09906b0856794375c47afe5bad47e9e026219a745f6f96ce3739bc240d9c57e326f8c8f1e2126b7e3d908e7fafbdb3575c21ff37760069602539  dolphin-plugins-f7a7bd7cfbdc834e72c9831595f699e8de01821d.tar.xz
"
