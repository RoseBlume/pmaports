# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=dolphin-plugins
pkgver=9999_git20240728
pkgrel=0
_commit="5adaf8d5271e633e02bdacb15255d4f1afddaf36"
pkgdesc="Extra Dolphin plugins"
url="https://www.kde.org/applications/system/dolphin/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	dolphin-dev
	extra-cmake-modules
	ki18n-dev
	kio-dev
	ktexteditor-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/dolphin-plugins.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-07-31/dolphin-plugins-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/dolphin-plugins-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_svn=OFF # Broken "error: expected unqualified-id before '(' token"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9fb202f86ad2ed8936bbfb6c60496ed865ef7d0abab0454120c8544d1b7cbf28f1ef116bd8f0cb05ff1ec333f13df99e43dbb7f9958599b4739fcb0becdfce29  dolphin-plugins-5adaf8d5271e633e02bdacb15255d4f1afddaf36.tar.xz
"
