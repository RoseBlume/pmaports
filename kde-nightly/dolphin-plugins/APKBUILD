# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=dolphin-plugins
pkgver=9999_git20240515
pkgrel=0
_commit="b641faddcba95fc04a1a9988a07c452e5d358023"
pkgdesc="Extra Dolphin plugins"
url="https://www.kde.org/applications/system/dolphin/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	dolphin-dev
	extra-cmake-modules
	ki18n-dev
	kio-dev
	ktexteditor-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/sdk/dolphin-plugins.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-15/dolphin-plugins-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/dolphin-plugins-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_svn=OFF # Broken "error: expected unqualified-id before '(' token"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
95c18c1d6e151fd2ed9218a44ec9d70607e49df91b8e9a0f3263f8a3aee9f932fcd0b9b728eab12b777cffb7215457d8521babfea361bd121c1bf2a1be17bbbb  dolphin-plugins-b641faddcba95fc04a1a9988a07c452e5d358023.tar.xz
"
