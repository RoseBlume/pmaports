# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kturtle
pkgver=9999_git20240404
pkgrel=0
_commit="e82ef7ce0d1ca6f98c9d4e9d9471a9511106a98c"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://edu.kde.org/kturtle"
pkgdesc="Educational Programming Environment"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	ktextwidgets-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kturtle.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-05/kturtle-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kturtle-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fb86c52c636136c4170e5929e10b4398da224e5fd261abf26a10b22460bc1db02d99a7370e6dd5841cb54835a0e7b7ba8f1a18b564c690caeaf70fd1ac699db3  kturtle-e82ef7ce0d1ca6f98c9d4e9d9471a9511106a98c.tar.xz
"
