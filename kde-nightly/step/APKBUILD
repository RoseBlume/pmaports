# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=step
pkgver=9999_git20240504
pkgrel=0
_commit="eaf11e5526f50d6fb1f399edabd47122e11bd750"
# armhf blocked by extra-cmake-modules
# s390x blocked by 
# riscv64 disabled due to missing rust in recursive dependency
arch="all !armhf !s390x !riscv64"
url="https://edu.kde.org/step/"
pkgdesc="Interactive Physics Simulator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	kconfig-dev
	kcrash-dev
	kdoctools-dev

	kiconthemes-dev
	knewstuff-dev
	kplotting-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/education/step.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-05/step-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/step-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ef50ae703400820fe04665da1886b78c1cfdfc6cb90a1958afa2b60a6588765691eb6700fa477c4edb480aa9e35d6992f26229697bd0726a96d838143ae789e8  step-eaf11e5526f50d6fb1f399edabd47122e11bd750.tar.xz
"
