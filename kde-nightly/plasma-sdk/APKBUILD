# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=plasma-sdk
pkgver=9999_git20240512
pkgrel=0
_commit="a9e2d5de93dec9194aac46b9f028bdb6a1a832fc"
pkgdesc="Applications useful for Plasma Development"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kitemmodels-dev
	kparts-dev
	kservice-dev
	ksvg-dev
	ktexteditor-dev
	kwidgetsaddons-dev
	libplasma-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xvfb-run"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/plasma-sdk.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-14/plasma-sdk-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang $pkgname-zsh-completion"

options="!check"
builddir="$srcdir/plasma-sdk-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# iconmodeltest is broken
	xvfb-run ctest --test-dir build --output-on-failure -E "iconmodeltest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cf0f8d5551eae07ca8d54a17de445140ab4506da25de0688b89072341cd7c0ded6dff33717fba404bf5a4dd4640e373293c04c3ce20ed1eb6b996e4ce3cb0251  plasma-sdk-a9e2d5de93dec9194aac46b9f028bdb6a1a832fc.tar.xz
"
