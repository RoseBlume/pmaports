# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-mobile
pkgname=khealthcertificate
pkgver=9999_git20231218
pkgrel=0
_commit="0e0f8017483da2f3f7435f704080487e7c69ba5c"
pkgdesc="Handling of digital vaccination, test and recovery certificates"
url="https://invent.kde.org/pim/khealthcertificate"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="LGPL-2.0-or-later"
depends_dev="
	karchive-dev
	kcodecs-dev
	ki18n-dev
	openssl-dev>3
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	zlib-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/pim/khealthcertificate.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2023-12-28/khealthcertificate-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

options="!check"
builddir="$srcdir/khealthcertificate-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1d864923a25278e799636f721d5dfd4121db215265a157bfc1abfb33e611bc84fc26737b5bcd570458c001acbc7a6246f4c22e9f9ac1cb08d43b1f36e5a93f50  khealthcertificate-0e0f8017483da2f3f7435f704080487e7c69ba5c.tar.xz
"
