# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kirigami-addons
pkgver=9999_git20240318
pkgrel=0
_commit="e9a63946ff3565f56ff457f990447f0b4fb5f145"
pkgdesc="Add-ons for the Kirigami framework"
url="https://invent.kde.org/libraries/kirigami-addons"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends="
	kirigami
	qt6-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami-dev
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kirigami-addons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-20/kirigami-addons-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kirigami-addons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# tst_sounds.qml is broken
	xvfb-run ctest --test-dir build --output-on-failure -E "tst_sounds.qml"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a2ad80d7c29f48ccc652d6334970008c2c3ffaae9f62910c314acc0470c69d43042bff0a7b21af277c44a383f39cbf9ad6ecfa461e18084cb6c4b284e5cfd82b  kirigami-addons-e9a63946ff3565f56ff457f990447f0b4fb5f145.tar.xz
"
