# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=akonadi-import-wizard
pkgver=9999_git20240219
pkgrel=0
_commit="2dc32de713c3c53f124e26cab3f816bee445d5ba"
# armhf blocked by extra-cmake-modules
# ppc64le, s390x and riscv64 blocked by kmailtransport -> libkgapi -> qt6-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64"
url="https://kontact.kde.org/"
pkgdesc="Import data from other mail clients to KMail"
license="GPL-2.0-or-later AND LGPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	akonadi-dev
	extra-cmake-modules
	kauth-dev
	kconfig-dev
	kcontacts-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kidentitymanagement-dev
	kio-dev
	kmailtransport-dev
	kwallet-dev
	libkdepim-dev
	mailcommon-dev
	messagelib-dev
	pimcommon-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-import-wizard.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-22/akonadi-import-wizard-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/akonadi-import-wizard-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c8e0a725b4b411c946c7b16696e0c2cc5c1c890d85f3ce7f21d543b8c2b0e7e459dcbd5c5e6dfd2204531fb2177096b4b8d7d94decdb24fc084a501e7c3bd342  akonadi-import-wizard-2dc32de713c3c53f124e26cab3f816bee445d5ba.tar.xz
"
