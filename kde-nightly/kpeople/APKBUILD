# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kpeople
pkgver=9999_git20240712
pkgrel=0
_commit="8c8d8351f2269a7efd1f4921bd12b56bd29b3bbf"
pkgdesc="A library that provides access to all contacts and the people who hold them"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends="qt6-qtbase-sqlite"
depends_dev="
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kservice-dev
	kwidgetsaddons-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kpeople.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-07-17/kpeople-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"


options="!check"
builddir="$srcdir/kpeople-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# personsmodeltest fails
	ctest --test-dir build --output-on-failure -E '(personsmodeltest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5f560de6f2f1243729bbfeb951ac7e51a7d51c12d9bbd9695049eed0b812f9107afe2deec51a3bbe74c23c11cb391f3b9d7e5a1ad563bdce4d557cbfaf9f6fcc  kpeople-8c8d8351f2269a7efd1f4921bd12b56bd29b3bbf.tar.xz
"
