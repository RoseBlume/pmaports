# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkmahjongg
pkgver=9999_git20240303
pkgrel=0
_commit="4687c906dcb8bd1877d985f1c9ff817641c65ea6"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games"
pkgdesc="Common code, backgrounds and tile sets for games using Mahjongg tiles"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/libkmahjongg.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-12/libkmahjongg-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests found

options="!check"
builddir="$srcdir/libkmahjongg-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
70abb06dcb2b8b27876e205cf40bd3f673d23e39a1449dc2267659d3bf7e03ff8f8349c5eb60b9e49cdfde8af240ec3dcebe5d9490c997ef1294fc1318f5ea6f  libkmahjongg-4687c906dcb8bd1877d985f1c9ff817641c65ea6.tar.xz
"
