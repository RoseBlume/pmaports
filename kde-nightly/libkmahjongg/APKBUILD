# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkmahjongg
pkgver=9999_git20240329
pkgrel=0
_commit="31bb5a3f34c4931b0ca6409b40c0b5b517b607f5"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/games"
pkgdesc="Common code, backgrounds and tile sets for games using Mahjongg tiles"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/games/libkmahjongg.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-30/libkmahjongg-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests found

options="!check"
builddir="$srcdir/libkmahjongg-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fcc2d23a6ab258ccbc3a68d78eb94de87053041ba7c1bdbdbdf1a9cd563f5ab33b2b4abd8af141982c095345cd63093ae7455ec5e833c7de4b2ef87dfee33fcf  libkmahjongg-31bb5a3f34c4931b0ca6409b40c0b5b517b607f5.tar.xz
"
