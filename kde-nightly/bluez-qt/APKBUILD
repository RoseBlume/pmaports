# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=bluez-qt
pkgver=9999_git20240328
pkgrel=0
_commit="f07b4d8d4267b077a9c9117bb8f7c926bcfdda77"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
pkgdesc="Qt wrapper for Bluez 5 DBus API"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/bluez-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-05/bluez-qt-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # Multiple tests either hang or fail completely

options="!check"
builddir="$srcdir/bluez-qt-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ed3e040064cb4f8d9768df398e13df46a325d144989cdd03149e6803bd819490e9504033aa1e729cfab842991b7b93f46a7a0731d908bab0430ebd1192a7cbbc  bluez-qt-f07b4d8d4267b077a9c9117bb8f7c926bcfdda77.tar.xz
"
