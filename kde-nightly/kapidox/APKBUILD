# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kapidox
pkgver=9999_git20231225
pkgrel=0
_commit="05b10ec7f28fb14229acc0819647e78006f41e0f"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Scripts and data for building API documentation (dox) in a standard format and style"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause"
depends="
	doxygen
	py3-jinja2
	py3-yaml
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-pyc"
_repo_url="https://invent.kde.org/frameworks/kapidox.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-03/kapidox-$_commit.tar.xz"
options="!check" # No useful tests

options="!check"
builddir="$srcdir/kapidox-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
2d21f1088ca3f84d5e87b38276834b08c133472482f90ad7496b89ee37caeadd2d394d89eb185541b8ed970da0519e1c47fee6bba8734248184488cc5dd851b4  kapidox-05b10ec7f28fb14229acc0819647e78006f41e0f.tar.xz
"
