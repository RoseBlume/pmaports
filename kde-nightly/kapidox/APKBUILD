# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kapidox
pkgver=9999_git20240412
pkgrel=0
_commit="1c5c216af77865c66111bebb8a6f4cd31a7b0650"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Scripts and data for building API documentation (dox) in a standard format and style"
url="https://community.kde.org/Frameworks"
license="BSD-3-Clause"
depends="
	doxygen
	py3-jinja2
	py3-yaml
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	samurai
	"
checkdepends="bash"
subpackages="$pkgname-pyc"
_repo_url="https://invent.kde.org/frameworks/kapidox.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-02/kapidox-$_commit.tar.xz"
options="!check" # No useful tests

options="!check"
builddir="$srcdir/kapidox-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
2f3ebdbc4ebb7ccb4f1ca3afd1ae23a32c1d75a439b060bef96428606552a981b3ca93c87bc871c7d54ded07650d292cfec4ebd564d8526739aa3af549a665ea  kapidox-1c5c216af77865c66111bebb8a6f4cd31a7b0650.tar.xz
"
