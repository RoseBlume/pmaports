# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=knotifyconfig
pkgver=9999_git20240424
pkgrel=0
_commit="f07034d8c4fabe1a180ba50b5c55e7c55b19a3e1"
pkgdesc="Configuration system for KNotify"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends_dev="
	kcompletion-dev
	kconfig-dev
	ki18n-dev
	kio-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/knotifyconfig.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-01/knotifyconfig-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/knotifyconfig-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5b3a48e426b91d856e74d6013a5f2ece96e87d26ea4473e4356c50cc0eb33b605065ae62cb6e87b7f87649c1fe3cc4b176d2cb03a18e02e5d775ac47183fff9c  knotifyconfig-f07034d8c4fabe1a180ba50b5c55e7c55b19a3e1.tar.xz
"
