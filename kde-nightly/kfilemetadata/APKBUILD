# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kfilemetadata
pkgver=9999_git20240108
pkgrel=0
_commit="f187191ed3c91a5d7699cf39b08de5b5ce8a5354"
pkgdesc="A library for extracting file metadata"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later AND ( LGPL-2.1-only OR LGPL-3.0-only )"
depends_dev="
	attr-dev
	exiv2-dev
	karchive-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	taglib-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	ffmpeg-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kfilemetadata.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-10/kfilemetadata-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kfilemetadata-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# Broken tests
	local skipped_tests="("
	local tests="
		usermetadatawritertest
		extractorcoveragetest
		propertyinfotest_localized
		extractorcollectiontest
		"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)test"
	ctest --test-dir build --output-on-failure -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8e7682b7c0381ce44abd05b7bf85ba3d36f9639228ff4d9735cad60a0b4783243dea53a5394ba082a3574042fa4df239d979c82a742d971377f36e1c454e884b  kfilemetadata-f187191ed3c91a5d7699cf39b08de5b5ce8a5354.tar.xz
"
