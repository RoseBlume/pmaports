# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kde-inotify-survey
pkgver=9999_git20240128
pkgrel=0
_commit="9511499ccbdd26b10e1f679222640b85087f8ec2"
pkgdesc="Tooling for monitoring inotify limits and informing the user when they have been or about to be reached"
url="https://invent.kde.org/system/kde-inotify-survey"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
# zstd is purely used to unpack the source archive
makedepends="
	extra-cmake-modules
	kauth-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	knotifications-dev
	polkit-qt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"
_repo_url="https://invent.kde.org/system/kde-inotify-survey.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-31/kde-inotify-survey-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kde-inotify-survey-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
731353a1929b147586a13d858ff831aeab66f7e5a94046e1ac4d3ebeb511e4b619890c704e86a0ee14cc0ffba7d00ad4891ef8cc4c098638f0beec3c79ecc512  kde-inotify-survey-9511499ccbdd26b10e1f679222640b85087f8ec2.tar.xz
"
