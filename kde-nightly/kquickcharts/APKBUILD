# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kquickcharts
pkgver=9999_git20240318
pkgrel=0
_commit="4394af966b10c2a275ff0b17f07de2751647104f"
pkgdesc="A QtQuick plugin providing high-performance charts"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kquickcharts.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-20/kquickcharts-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kquickcharts-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	# Workaround for a pmbootstrap bug
	# Normally you'd just add $pkgname=$pkgver-r$pkgrel to depends_dev directly
	# However pmbootstrap then tries to install that package but fails to do so
	# if the package hasn't been built before (and thus has nothing to install)
	# It seems =$pkgver-r$pkgrel is ignored by this
	depends="$depends_dev $pkgname=$pkgver-r$pkgrel"
	default_dev
}

sha512sums="
5049f52ff8adc42a936f4d5747ff9cbfd2797fd63ab1a3daf2519a553593476964963b946e71797728532b89751dbdb5c8f25cbd87b37bec5bc63a3491a05909  kquickcharts-4394af966b10c2a275ff0b17f07de2751647104f.tar.xz
"
