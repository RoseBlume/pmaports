# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=plasmatube
pkgver=9999_git20240126
pkgrel=0
_commit="01f11baad4c5c80ccb8e7c337c33d7d6b24301b9"
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	mpvqt-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/plasmatube.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-31/plasmatube-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasmatube-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cb305e90b19d80de294cfd3d745175db82fbd4e952bd6fe294568a50e38d22158d2c9be678bdcc07defd327c57351be036356d8aa4de2e1c13f9db8030c3f5df  plasmatube-01f11baad4c5c80ccb8e7c337c33d7d6b24301b9.tar.xz
"
