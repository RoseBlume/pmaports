# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=plasmatube
pkgver=9999_git20240122
pkgrel=0
_commit="32c3bcfe6f8406b22d6f19be1e63e9667fa04246"
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	mpvqt-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/plasmatube.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-24/plasmatube-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasmatube-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
cfd9be14b7553e2a71db08120642a44051ff5e5dd1f3d0a3cd6fb57726b0789f530aa632f51422cf1d4a18fa38ed691769cda75e09342620379817d69b38fecf  plasmatube-32c3bcfe6f8406b22d6f19be1e63e9667fa04246.tar.xz
"
