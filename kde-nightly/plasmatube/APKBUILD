# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=plasmatube
pkgver=9999_git20240822
pkgrel=0
_commit="021531eb16f06b25463d31a85a711379ddb60d41"
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami
	kirigami-addons
	kitemmodels
	purpose
	qt6-qtimageformats
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	mpvqt-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/plasmatube.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-22/plasmatube-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasmatube-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b9802b32e04d4558f475615d78b697498590873ac30d91cb5d80fecf6455e79aae3c10ee4c56c4bc7264562ae762156b6fc3d503e28a117f9de86dca49fad46b  plasmatube-021531eb16f06b25463d31a85a711379ddb60d41.tar.xz
"
