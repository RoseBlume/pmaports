# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=plasmatube
pkgver=9999_git20240804
pkgrel=0
_commit="c802c051f8f693fc97e4bc220524d7c479a08cdf"
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami
	qt6-qtimageformats
	"
makedepends="
	extra-cmake-modules
	kdbusaddons-dev
	ki18n-dev
	kirigami-addons-dev
	kirigami-dev
	mpvqt-dev
	qt6-qtbase-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/plasmatube.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-10/plasmatube-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasmatube-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ec1cb8ad00fb7c334e0c4964c1b18e17e73bce5df04d850d9bcbe69f0b5bd9233998ce5098582c2a018c507fc98ff27fc38d931e2ac36e355d86f19db5a21c19  plasmatube-c802c051f8f693fc97e4bc220524d7c479a08cdf.tar.xz
"
