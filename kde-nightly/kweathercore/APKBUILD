# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kweathercore
pkgver=9999_git20240516
pkgrel=0
_commit="066800677d8f103b2b03ebb92fd8681c49684808"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
arch="all !armhf" # armhf blocked by qt6-qtlocation-dev
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-20/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3e1b4a40a210f120433d34a76d0097fff1fc0d5bfe585dfecc6560a99b593732c0a524982853d11a8b11073baa2a3ed7a9f09370d21dbcfcb8c54efd104c893b  kweathercore-066800677d8f103b2b03ebb92fd8681c49684808.tar.xz
"
