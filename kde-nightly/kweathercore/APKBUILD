# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kweathercore
pkgver=9999_git20240208
pkgrel=0
_commit="f50f19e3fec36e959b80dd8e85769752e5a0dda7"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
arch="all !armhf" # armhf blocked by qt6-qtlocation-dev
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-11/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a151db2ef76524731253c08671ec15bba434a52bf8ea4463bb91670eb6eac3c3e3974ba28e6cd2ec5e475f226a93f44210b943874852386b5d25fd0a89d06d61  kweathercore-f50f19e3fec36e959b80dd8e85769752e5a0dda7.tar.xz
"
