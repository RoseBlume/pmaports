# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kweathercore
pkgver=9999_git20240126
pkgrel=0
_commit="28a097c2f99452552efcea7ae35a4d70d599405d"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
arch="all !armhf" # armhf blocked by qt6-qtlocation-dev
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-31/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
87e2ba8735f4a3ab6f2bfc2ba227e80f3d9899cd8cbfc19fced330954caf6febcfa515d240852031aacd931126a35f056230a2f93ab3cefae7afb02229927a91  kweathercore-28a097c2f99452552efcea7ae35a4d70d599405d.tar.xz
"
