# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kweathercore
pkgver=9999_git20240301
pkgrel=0
_commit="16c4d37ab587955e18def7df3aeed8f021116232"
pkgdesc="Library to facilitate retrieval of weather information including forecasts and alerts"
url="https://invent.kde.org/libraries/kweathercore"
arch="all !armhf" # armhf blocked by qt6-qtlocation-dev
license="LGPL-2.0-or-later AND CC-BY-4.0"
depends_dev="
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtlocation-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/kweathercore.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-12/kweathercore-$_commit.tar.xz"
options="!check" # No tests
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/kweathercore-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
02ca4bc2baa0b4ca4370db6819310d4ef238d96c37c2ccaf4f7f4ddb529fcf4b152e9ab66eca6e87c9a5ca2f418e89aca06bb5b5626e5796d57e0ad56b972f25  kweathercore-16c4d37ab587955e18def7df3aeed8f021116232.tar.xz
"
