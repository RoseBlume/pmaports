# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=ocean-sound-theme
pkgver=9999_git20240521
pkgrel=0
_commit="ad851f3f1311ee1b9d1ec7adff03225d93bda1ef"
pkgdesc="Ocean Sound Theme for Plasma"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma/ocean-sound-theme"
license="BSD-2-Clause AND CC-BY-SA-4.0 and CC0-1.0"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/ocean-sound-theme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-26/ocean-sound-theme-$_commit.tar.xz"
subpackages=""

options="!check"
builddir="$srcdir/ocean-sound-theme-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
723952f7e207e882aab7c953bbf45f5df5d3d8b9d64579a726bae727d31ce0a93940c101013efb25f26bec49ccb6964fbaed5549ef3a1c6afd3253bbd794754f  ocean-sound-theme-ad851f3f1311ee1b9d1ec7adff03225d93bda1ef.tar.xz
"
