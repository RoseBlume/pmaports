# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=ocean-sound-theme
pkgver=9999_git20240213
pkgrel=0
_commit="4b12a40680a5ceb3418770afac5f9eda09fb8b19"
pkgdesc="Ocean Sound Theme for Plasma"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma/ocean-sound-theme"
license="BSD-2-Clause AND CC-BY-SA-4.0 and CC0-1.0"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/plasma/ocean-sound-theme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-20/ocean-sound-theme-$_commit.tar.xz"
subpackages=""

options="!check"
builddir="$srcdir/ocean-sound-theme-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
418b7c83af86af4a0537d18f1c942b166586a4ad869ffd942aa7e0cba97433ba1fe6d8510140d8120fb97bdd24770f48cd0510661c0bea2cfaaf82b2da41fa89  ocean-sound-theme-4b12a40680a5ceb3418770afac5f9eda09fb8b19.tar.xz
"
