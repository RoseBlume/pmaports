# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmoretools
pkgver=9999_git20240802
pkgrel=0
_commit="dd49f47bef6a534412e6530cef7878aba41ce89f"
pkgdesc="Support for downloading application assets from the network"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/kmoretools/"
license="BSD-2-Clause AND LGPL-2.1-or-later AND LGPL-3.0-only"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kjobwidgets-dev
	kservice-dev
	kwidgetsaddons-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/kmoretools.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-06/kmoretools-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kmoretools-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8ad8b72ef58f479ecd52146490f5fa3603a327c12391e48e7906305952b877d3859e3962b8f7230d8fbfe727d06d6d03c51f735a866be038df93a67ae3dcdbaf  kmoretools-dd49f47bef6a534412e6530cef7878aba41ce89f.tar.xz
"
