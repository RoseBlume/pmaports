# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=polkit-qt
pkgver=9999_git20240221
pkgrel=0
_commit="aa1c6c414ec021fd32e30492c00bb13347e228db"
pkgdesc="Qt wrapper around polkit-1 client libraries"
arch="all"
url="https://www.kde.org"
license="LGPL-2.1-only"
depends_dev="polkit-elogind-dev"
makedepends="$depends_dev
	cmake
	qt5-qtbase-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/polkit-qt-1.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-14/polkit-qt-1-$_commit.tar.xz"
subpackages="$pkgname-dev ${pkgname}5:_qt5 ${pkgname}6:_qt6"
builddir="$srcdir/polkit-qt-1-$pkgver"

replaces="polkit-qt-1<=0.114.0-r2"

builddir="$srcdir/polkit-qt-1-$_commit"

build() {
	cmake -B build-qt5 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build-qt5

	cmake -B build-qt6 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DQT_MAJOR_VERSION=6
	cmake --build build-qt6
}

check() {
	ctest --test-dir build-qt5 --output-on-failure
	ctest --test-dir build-qt6 --output-on-failure

}

package() {
	DESTDIR="$pkgdir" cmake --install build-qt5
	DESTDIR="$pkgdir" cmake --install build-qt6
}

_qt5() {
	amove usr/lib/libpolkit-qt5*
}

_qt6() {
	amove usr/lib/libpolkit-qt6*
}

sha512sums="
480b6eb3f4754474ed3befefe319faaa2e3616ee6c5a206bce3106d8b0c6d7d95e5eec6de2de59a89f09ab5d42e7f5dd6a32bd90e512beeb20949bd0fc34dd33  polkit-qt-1-aa1c6c414ec021fd32e30492c00bb13347e228db.tar.xz
"
