# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=oxygen-icons
pkgver=9999_git20240818
pkgrel=0
_commit="b00aff733df87cb5284989858c3de41ebc550282"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Oxygen icon theme"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="$depends_dev
	extra-cmake-modules
	fdupes
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/oxygen-icons5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-20/oxygen-icons5-$_commit.tar.xz"
builddir="$srcdir/oxygen-icons5-$pkgver"

options="!check"
builddir="$srcdir/oxygen-icons5-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
71a793a243ada9a8acdc747f70e139172c8c5d905e37f9d80bcb1087bb9086ed3a8294a8b7ee13aa30db9ee893b7b34949a17c507b390b7a29c73e4784f5f40c  oxygen-icons5-b00aff733df87cb5284989858c3de41ebc550282.tar.xz
"
