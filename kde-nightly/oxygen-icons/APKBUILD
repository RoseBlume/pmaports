# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=oxygen-icons
pkgver=9999_git20231126
pkgrel=0
_commit="0b5c5d9d62dbfc995292c2a35b3a2cc805cf2782"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
pkgdesc="Oxygen icon theme"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
makedepends="$depends_dev
	extra-cmake-modules
	fdupes
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/oxygen-icons5.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-08/oxygen-icons5-$_commit.tar.xz"
builddir="$srcdir/oxygen-icons5-$pkgver"

options="!check"
builddir="$srcdir/oxygen-icons5-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
36bf5bf99e95277598b9412afa937fdb5087ecc3de0698653d1d727c1a0863c771ad793736a8adb67f0dbda108b7befd1986640dea0f6b950cdc50387c92a07e  oxygen-icons5-0b5c5d9d62dbfc995292c2a35b3a2cc805cf2782.tar.xz
"
