# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=print-manager
pkgver=9999_git20240722
pkgrel=0
_commit="ec31b0cc0cd2286cac3fdb91b8b7248f54415390"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://www.kde.org/applications/utilities/"
pkgdesc="A tool for managing print jobs and printers"
license="GPL-2.0-or-later"
depends="system-config-printer"
makedepends="
	cups-dev
	extra-cmake-modules
	kcmutils-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-addons-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	system-config-printer
	samurai
	"
_repo_url="https://invent.kde.org/plasma/print-manager.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-07-22/print-manager-$_commit.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests available

options="!check"
builddir="$srcdir/print-manager-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

