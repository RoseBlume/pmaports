# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=akonadi-notes
pkgver=9999_git20240117
pkgrel=0
_commit="bc800657190b0d08f4db371536ec15954b2e05f7"
pkgdesc="Libraries and daemons to implement management of notes"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="
	ki18n-dev
	kmime-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/pim/akonadi-notes.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-17/akonadi-notes-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/akonadi-notes-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c489b2b72eb736126ae1185e91239b7eeb574d604c2003e738418c1c7e9d3f64e11a1fbb1a1ae47462fcfb8f8bdf59a9e33bc2b3852ad9038720a372e92c99d5  akonadi-notes-bc800657190b0d08f4db371536ec15954b2e05f7.tar.xz
"
