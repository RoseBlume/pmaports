# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=kid3
pkgver=9999_git20240219
pkgrel=0
_commit="fc165f63d522a657aee28fc01d5a33bcaff0bc20"
pkgdesc="Efficient audio tagger that supports a large variety of file formats"
url="https://kid3.kde.org/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	chromaprint-dev
	extra-cmake-modules
	ffmpeg-dev
	flac-dev
	id3lib-dev
	libvorbis-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	readline-dev
	samurai
	taglib-dev
	zlib-dev
	"
subpackages="$pkgname-doc"
_repo_url="https://invent.kde.org/multimedia/kid3.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-22/kid3-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kid3-$_commit"

build() {
	CXXFLAGS="$CXXFLAGS -flto=auto" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_APPS="qt;qml;cli"
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
aca49503b416a5914068e56194bbb4529d459cd0ce57565e097f9b89c76e5b86241f4952c7dd83a1dba252c4a0008a60683587e3bf983ca18a42986f7acf127d  kid3-fc165f63d522a657aee28fc01d5a33bcaff0bc20.tar.xz
"
