# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=khangman
pkgver=9999_git20240713
pkgrel=0
_commit="67d2510d8deef4f3de679b3d26cb974ba4188285"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/khangman"
pkgdesc="Hangman game"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	kxmlgui-dev
	libkeduvocdocument-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/khangman.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-07-20/khangman-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/khangman-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b0b551eb3510eed69f62ffd054808a37595e644772b6ff8be9fe753a3cb1ed16471245eb5f8a4e36cfcb13f142c8cc82ca761597de4664e52b237eeadcfb3845  khangman-67d2510d8deef4f3de679b3d26cb974ba4188285.tar.xz
"
