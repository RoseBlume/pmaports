# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=khangman
pkgver=9999_git20240331
pkgrel=0
_commit="bc8b8a25a0f469ef999a5b94ddc21056aa9d22fb"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/khangman"
pkgdesc="Hangman game"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	kxmlgui-dev
	libkeduvocdocument-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/khangman.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-04/khangman-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/khangman-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d776787d8f1b0e5ff91aead7d0baf807730384ba71ec3fba15b38b2f48f2ba2e840a3219b114e37462808944007ac8b0e6b2cafa21a48bb36f3cf8fe117cf188  khangman-bc8b8a25a0f469ef999a5b94ddc21056aa9d22fb.tar.xz
"
