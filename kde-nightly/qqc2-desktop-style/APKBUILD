# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=qqc2-desktop-style
pkgver=9999_git20240112
pkgrel=0
_commit="69eba3a87868c01e919f90cf5e4d4c5069f4ac64"
pkgdesc="A style for Qt Quick Controls 2 to make it follow your desktop theme"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-only AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfigwidgets-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/qqc2-desktop-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-16/qqc2-desktop-style-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/qqc2-desktop-style-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
15691bd8a690c0e44f31f7d0e2d54f77ca912a621384d4587d97dbfc5e2fc21b25d8bd205792037c5586159aca40a1ee84a9564b7bff004e7f8c537b8c2bd830  qqc2-desktop-style-69eba3a87868c01e919f90cf5e4d4c5069f4ac64.tar.xz
"
