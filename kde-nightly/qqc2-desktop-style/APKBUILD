# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=qqc2-desktop-style
pkgver=9999_git20240503
pkgrel=0
_commit="9f2ccfbdc6ca5bc60dfe8b33f43d7d8e7aaee0c5"
pkgdesc="A style for Qt Quick Controls 2 to make it follow your desktop theme"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-only AND (GPL-2.0-only OR GPL-3.0-only)"
depends_dev="
	kconfigwidgets-dev
	kiconthemes-dev
	kirigami-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/qqc2-desktop-style.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-05-04/qqc2-desktop-style-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/qqc2-desktop-style-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
502152edeb921fafa21d56268941c57aa688db51542bb9df7af644b9b4afb0e8479e3c0aad7ce3e50875bb5c171d2fb2cb2ada6d8aa71744b7ace5a145c657f9  qqc2-desktop-style-9f2ccfbdc6ca5bc60dfe8b33f43d7d8e7aaee0c5.tar.xz
"
