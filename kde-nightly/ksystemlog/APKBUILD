# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=ksystemlog
pkgver=9999_git20240810
pkgrel=0
_commit="322b1e06f2abe5c609d00a78bf8c8cd2783824ea"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://apps.kde.org/ksystemlog/"
pkgdesc="KDE SystemLog Application"
license="GPL-2.0-or-later AND BSD-3-Clause"
depends_dev="
	audit-dev
	karchive-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kitemviews-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	kxmlgui-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-lang $pkgname-doc"
_repo_url="https://invent.kde.org/system/ksystemlog.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-10/ksystemlog-$_commit.tar.xz"

options="!check"
builddir="$srcdir/ksystemlog-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
300066642968a065619a905baff78ef753e447dd0510e1a540c839937e7d0878207f35c6852e969c036878a2d939d1bb12e71c104fd920590a55f9ee49c202ff  ksystemlog-322b1e06f2abe5c609d00a78bf8c8cd2783824ea.tar.xz
"
