# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kteatime
pkgver=9999_git20240109
pkgrel=0
_commit="318379d7b10e8dfcef5916fa3488815ab4ee9ce4"
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kteatime"
pkgdesc="A handy timer for steeping tea"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kconfig-dev
	kcrash-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	knotifyconfig-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kteatime.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-10/kteatime-$_commit.tar.xz"
subpackages=" $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kteatime-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

