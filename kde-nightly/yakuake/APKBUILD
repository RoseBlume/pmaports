# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=yakuake
pkgver=9999_git20240517
pkgrel=0
_commit="4b6c2e9a1d79b5e5bd879148f72f7c78a1e93f02"
arch="all !armhf"
url="https://kde.org/applications/system/org.kde.yakuake"
pkgdesc="A drop-down terminal emulator based on KDE Konsole technology"
license="GPL-2.0-only OR GPL-3.0-only"
depends="konsole"
makedepends="
	extra-cmake-modules
	karchive-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kglobalaccel-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	knotifyconfig-dev
	kparts-dev
	kstatusnotifieritem-dev
	kwayland-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/yakuake.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-06-06/yakuake-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/yakuake-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ac102b245490e6e9041f009cb5818ebd87fb1f40a7c230d96a984ccf2b638c82640aed5d590668e6d98322d700a9b5d9c0a54a841f7a999efa919f5ad774177f  yakuake-4b6c2e9a1d79b5e5bd879148f72f7c78a1e93f02.tar.xz
"
