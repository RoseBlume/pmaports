# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=wacomtablet
pkgver=9999_git20240131
pkgrel=0
_commit="c3bb2fc8eb8afc5dce5cc0fcbd6f44f1ed763cf5"
pkgdesc="GUI for Wacom Linux drivers that supports different button/pen layout profiles"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="xinput"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libplasma-dev
	libwacom-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	xf86-input-wacom-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/system/wacomtablet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-02-01/wacomtablet-$_commit.tar.xz"
subpackages="$pkgname-lang $pkgname-doc"

options="!check"
builddir="$srcdir/wacomtablet-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure -E "Test.KDED.DBusTabletService"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
e5bcaab76bac2ed586004792f5c665f8529ef45b19acb653d7acfaa0c9427e74ecce1efbcec9d025df5c7a57db23006ec0b3e61d811f88f330517dcae171eac3  wacomtablet-c3bb2fc8eb8afc5dce5cc0fcbd6f44f1ed763cf5.tar.xz
"
