# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this apkbuild by some scripts for automation
# group=kde-frameworks
pkgname=kguiaddons
pkgver=9999_git20240814
pkgrel=0
_commit="adc939180a9daf122b27a89c5f4ef729c4d9fd06"
pkgdesc="Addons to QtGui"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	plasma-wayland-protocols
	qt6-qttools-dev
	qt6-qtwayland-dev
	wayland-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	doxygen
	graphviz
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kguiaddons.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-16/kguiaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-bin"

options="!check"
builddir="$srcdir/kguiaddons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

bin() {
	amove usr/bin/kde-geo-uri-handler
	amove usr/share/applications
}

sha512sums="
053ad8dfe2df0dd19b2ed93d1277c24bc2df5aa2fd21ecf7b80f2d644466a850de54c0a37e5d1431102c05c8de5c282c97ef33471d13e5c0538ed8e15949be15  kguiaddons-adc939180a9daf122b27a89c5f4ef729c4d9fd06.tar.xz
"
