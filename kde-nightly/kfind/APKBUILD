# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kfind
pkgver=9999_git20240826
pkgrel=0
_commit="1302cbe1464658b3d6a16a9a0eaba6260556a0af"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/utilities/kfind"
pkgdesc="Find Files/Folders"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kfind.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-26/kfind-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kfind-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a56a6ed9e2e96bf85db16bd99d0efd8e74ab780f901376bf7c3f4c37484add7f710a47cc66c1d447bb512dd37db530cea07751cdf09415f896fede0d0afc3cf4  kfind-1302cbe1464658b3d6a16a9a0eaba6260556a0af.tar.xz
"
