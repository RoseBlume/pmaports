# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kfind
pkgver=9999_git20240310
pkgrel=0
_commit="d9905b3bafd3149c8fc2153d7245f241c801dddf"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/utilities/kfind"
pkgdesc="Find Files/Folders"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcoreaddons-dev
	kdoctools-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	ktextwidgets-dev
	kwidgetsaddons-dev
	samurai
	"
_repo_url="https://invent.kde.org/utilities/kfind.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-14/kfind-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kfind-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0ba8b8e57d68443f0f1e5b8919b27e63875b5d77a9e22dc079f009a5384db623d52544f2884bc419d6f4ce5bcf2b4ded6f1bb3e3ea8cf918e1c1fdd40667bb73  kfind-d9905b3bafd3149c8fc2153d7245f241c801dddf.tar.xz
"
