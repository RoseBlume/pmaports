# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=milou
pkgver=9999_git20240122
pkgrel=0
_commit="c89a1b2d3289c09d09e34ab7b8c2e8faeab73375"
pkgdesc="A dedicated search application built on top of Baloo"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later AND (GPL-2.0-only OR GPL-3.0-only) AND (LGPL-2.1-only OR LGPL-3.0-only)"
makedepends="
	extra-cmake-modules
	kcoreaddons-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	krunner-dev
	kservice-dev
	libplasma-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/milou.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-31/milou-$_commit.tar.xz"
subpackages="$pkgname-lang"

options="!check"
builddir="$srcdir/milou-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fe1df4debe8f824b9a45092c1b5f890379d82fde41c92c7e89c9a6aaf940751254f11e6fd9054bb99f8eae2a2d6d97e55317bf109ac0fae7519fc209f4974841  milou-c89a1b2d3289c09d09e34ab7b8c2e8faeab73375.tar.xz
"
