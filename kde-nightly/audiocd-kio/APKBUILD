# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=audiocd-kio
pkgver=9999_git20240824
pkgrel=0
_commit="2416e056d9357d2beeaeb91ccca79d50bac10527"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/multimedia/"
pkgdesc="Kioslave for accessing audio CDs"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	cdparanoia-dev
	extra-cmake-modules
	flac-dev
	kcmutils-dev
	kconfig-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	libkcddb-dev
	libkcompactdisc-dev
	libvorbis-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/multimedia/audiocd-kio.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-24/audiocd-kio-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/audiocd-kio-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
de3c7e8ae9f5e299882582263ac33c2818da65ef2277a5d87e393fefcf529abce92f8bd13404128b9be7b18ecfa15d8a6bfe143b014921a5d43c1a9872fe6660  audiocd-kio-2416e056d9357d2beeaeb91ccca79d50bac10527.tar.xz
"
