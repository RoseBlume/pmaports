# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kcodecs
pkgver=9999_git20240310
pkgrel=0
_commit="5d2c1cc3597bc29e19a89167c55281e1cf90e4b2"
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	gperf
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/frameworks/kcodecs.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-14/kcodecs-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcodecs-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build --output-on-failure build -E "(rfc2047|kcharsets)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d6823e3a7a34720cc50ee0e620a5f07912c96810749c14d5f70c9b70adcb1413bbc8884c047aa1d8273cc82a49115351ff98769402bbbb3e4009a392a6792ff3  kcodecs-5d2c1cc3597bc29e19a89167c55281e1cf90e4b2.tar.xz
"
