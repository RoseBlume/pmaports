# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kcolorscheme
pkgver=9999_git20240310
pkgrel=0
_commit="1515c07514e10f9552b6c6623219686a72d4cfae"
pkgdesc="Classes to read and interact with KColorScheme"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kconfig-dev
	kguiaddons-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/kcolorscheme.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-03-14/kcolorscheme-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kcolorscheme-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
57c06a72356eb177df635fed44b32540f43cf39e3966424811b1c3105cce3a45d9fb519f1c2d79b18c9d09ad26599e241aef2dabea6e7c46c3ab9dc8d2fd1607  kcolorscheme-1515c07514e10f9552b6c6623219686a72d4cfae.tar.xz
"
