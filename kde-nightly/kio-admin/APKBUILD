# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kio-admin
pkgver=9999_git20240109
pkgrel=0
_commit="1b25548166bf71da85d81f9fa74577a768367b7e"
pkgdesc="Manage files as administrator using the admin:// KIO protocol"
url="https://invent.kde.org/system/kio-admin"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="BSD-3-Clause AND (GPL-2.0-only OR GPL-3.0-only)"
# zstd is purely used to unpack the source archive
makedepends="
	extra-cmake-modules
	ki18n-dev
	kio-dev
	polkit-qt-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/system/kio-admin.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-01-10/kio-admin-$_commit.tar.xz"

options="!check"
builddir="$srcdir/kio-admin-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
adee4273de4679fc805372a7f77db2be0d27e702634ff969d415cd5e911a05368afff016ec1b726c7ca81f3d6e343dacf8ff2b4e10afd62c5d956773f7e77969  kio-admin-1b25548166bf71da85d81f9fa74577a768367b7e.tar.xz
"
