# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=qrca
pkgver=9999_git20240829
pkgrel=0
_commit="17e48994695d758f8d4e5de6fad4b31e184e7054"
pkgdesc="QR-Code scanner for Plasma Mobile"
# armhf blocked by qt5-qtdeclarative
# ppc64le, s390x, riscv64 and loongarch64 blocked by qt5-qtwebengine -> purpose
arch="all !armhf !ppc64le !s390x !riscv64 !loongarch64"
url="https://invent.kde.org/utilities/qrca"
license="GPL-3.0-or-later"
depends="
	kirigami
	purpose
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	prison-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	samurai
	zxing-cpp-dev
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/utilities/qrca.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-31/qrca-$_commit.tar.xz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
84ac043fed17a90d144ffb732a98175fb9a2846e5e85c648cce3605c59bd8db564b5d577aabb16690dfd61179903d5583c208d5d0c7328ba3bab9ccfb108ce69  qrca-17e48994695d758f8d4e5de6fad4b31e184e7054.tar.xz
"
