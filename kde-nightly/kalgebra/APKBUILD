# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kalgebra
pkgver=9999_git20240406
pkgrel=0
_commit="1c0ffbd10ed2dcfd3fe27352baeec9b122c99bbd"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://edu.kde.org/kalgebra/"
pkgdesc="2D and 3D Graph Calculator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	analitza-dev
	extra-cmake-modules
	kconfigwidgets-dev
	kcoreaddons-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	kwidgetsaddons-dev
	libplasma-dev
	ncurses-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	readline-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kalgebra.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-04-09/kalgebra-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

options="!check"
builddir="$srcdir/kalgebra-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
