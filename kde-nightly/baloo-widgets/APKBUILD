# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=baloo-widgets
pkgver=9999_git20240805
pkgrel=0
_commit="514e1b7bcad8f5fe1ff8710c9ae11045c48f0f83"
pkgdesc="Widgets for Baloo"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://community.kde.org/Baloo"
license="LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="
	baloo-dev
	kconfig-dev
	kfilemetadata-dev
	ki18n-dev
	kio-dev
	qt6-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/libraries/baloo-widgets.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-08-07/baloo-widgets-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

options="!check"
builddir="$srcdir/baloo-widgets-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	# filemetadatadatedisplaytest, filemetadatawidgettest and filemetadataitemcounttest
	# require running dbus server
	local skipped_tests="("
	local tests="
		filemetadatadatedisplay
		filemetadatawidget
		filemetadataitemcount"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)|test"
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
fd31c1830e478fe598c31fe220dd6fa16b4c0af80dd3f2b30c8b8e0663d3ebf2a26a953f4eb245512859e9987b866c9eefde9ac2af718b12b6eb0be19a5b44fc  baloo-widgets-514e1b7bcad8f5fe1ff8710c9ae11045c48f0f83.tar.xz
"
