# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Jenneron <jenneron@protonmail.com>
pkgname=device-lenovo-81xe
pkgdesc="Lenovo Yoga 5G"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-postmarketos-qcom-sc8180x>=6.6.0
	postmarketos-base
	soc-qcom-sc8180x
	systemd-boot
"
makedepends="devicepkg-dev"
source="deviceinfo modules-initfs"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
provides="
	device-lenovo-yoga-5g=$pkgver-r$pkgrel
	device-lenovo-flex-5g=$pkgver-r$pkgrel
"
replaces="
	device-lenovo-yoga-5g
	device-lenovo-flex-5g
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="WiFi/BT, GPU firmware"
	depends="firmware-lenovo-yoga-5g linux-firmware-ath10k soc-qcom-sc8180x-nonfree-firmware"
	provides="device-lenovo-yoga-5g-nonfree-firmware=$pkgver-r$pkgrel"
	replaces="device-lenovo-yoga-5g-nonfree-firmware"
	mkdir "$subpkgdir"
}


