# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-pine64-pinetab-v
pkgdesc="Pine64 PineTab-v"
pkgver=1
pkgrel=1
url="https://postmarketos.org"
license="MIT"
arch="riscv64"
options="!check !archcheck"
depends="
	linux-pine64-star64
	postmarketos-base
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	vf2_uEnv.txt
	50-disable-glamor.conf
	"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -Dm644 "$srcdir"/vf2_uEnv.txt \
		"$pkgdir"/boot/vf2_uEnv.txt
	install -Dm644 "$srcdir"/50-disable-glamor.conf \
		"$pkgdir"/usr/share/X11/xorg.conf.d/50-disable-glamor.conf
}

