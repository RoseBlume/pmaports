# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/x86_64/configs/zenfone2_defconfig

pkgname=linux-asus-z00xs
pkgver=3.10.72
pkgrel=0
pkgdesc="Asus ZenFone Zoom (ZX551ML) kernel fork"
arch="x86_64"
_carch="x86_64"
_flavor="asus-z00xs"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	bc
	bison
	devicepkg-dev
	findutils
	flex
	openssl-dev
	perl
	linux-headers
"

# Source
_repository="android_kernel_asus_moorefield"
_commit="c3eae894ce8092c2a9a51f9a4924c8df714d6b3c"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/LineageOS/$_repository/archive/$_commit.tar.gz
	$_config
	gcc7-give-up-on-ilog2-const-optimizations.patch
	gcc8-fix-put-user.patch
	gcc10-extern_YYLOC_global_declaration.patch
	kernel-use-the-gnu89-standard-explicitly.patch
	fix-recordmcount.patch
	x86-relocs-Make-per_cpu_load_addr-static.patch
	01_ipc-shm-fix-redefinition-of-shm_rcu_free.patch
	03_ipc-fix-undefined-references.patch
	ipc-fix-undefined-sem_wait_array.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" \
		"$_flavor" "$_outdir"
}

